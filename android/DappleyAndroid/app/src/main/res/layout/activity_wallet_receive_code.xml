<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_page_gradient"
    android:orientation="vertical"
    tools:context=".WalletReceiveCodeActivity">

    <include layout="@layout/toolbar_title_back_trans" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="30dip"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/bg_gray_light_top_radius"
        android:gravity="center"
        android:text="address"
        android:textColor="@color/gray_text"
        android:textIsSelectable="true"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/white"
        android:paddingTop="@dimen/margin_30"
        android:paddingBottom="@dimen/margin_30">

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/bg_gray_light_bottom_radius">

        <Button
            android:id="@+id/btn_copy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackground"
            android:text="@string/layout_copy_receive_address"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WalletMnemonicActivity">

    <include layout="@layout/toolbar_title_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="20dip"
        android:layout_marginRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8">

        <TextView
            android:layout_width="92dip"
            android:layout_height="wrap_content"
            android:text="@string/layout_wallet_name" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:textColor="@color/gray_text"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8">

        <TextView
            android:layout_width="92dip"
            android:layout_height="wrap_content"
            android:text="@string/layout_wallet_address" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:textColor="@color/gray_text"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8">

        <TextView
            android:layout_width="92dip"
            android:layout_height="wrap_content"
            android:text="@string/layout_import_private_key" />

        <EditText
            android:id="@+id/et_private_key"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:textColor="@color/gray_text"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_mnemonic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8">

        <TextView
            android:layout_width="92dip"
            android:layout_height="wrap_content"
            android:text="@string/layout_import_mnemonic" />

        <EditText
            android:id="@+id/et_mnemonic"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:textColor="@color/gray_text"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        style="?borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="30dip"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@drawable/btn_primary_selector"
        android:text="@string/layout_encrypt_and_save"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>